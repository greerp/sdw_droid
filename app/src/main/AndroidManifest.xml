<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uk.greer.sdwapp" >

    <!-- android:theme="@style/AppTheme" > -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name=".SplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity2"
            android:label="@string/title_activity_main_activity2" >
        </activity>
<!--         <activity android:name=".CollectionDemoActivity" android:label="@string/demo_collection" /> -->

        <activity
            android:name=".activity.upcoming.UpcomingEvent"
            android:label="@string/title_activity_upcoming_event"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity2">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity2"/>


        </activity>
    </application>

</manifest>
