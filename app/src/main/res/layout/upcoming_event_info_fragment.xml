<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.uk.greer.sdwapp.activity.upcoming.UpcomingEvent">

    <RelativeLayout
        android:id="@+id/upcomingEventLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center">


        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_above="@+id/event_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="TODO"
            android:src="@drawable/tt" />


        <ToggleButton
            android:id="@+id/fav_button"
            android:button="@android:drawable/btn_star"
            android:textOff=""
            android:textOn=""
            android:background="@android:color/transparent"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/register_button"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:width="100dp"
            android:text="@string/register_button_text" />

        <TextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/register_button"
            android:paddingTop="10dp"
            android:text="Ladies Mile"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/sdw_yellow"
            android:textSize="@dimen/abc_text_size_large_material" />

        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/event_name"
            android:paddingTop="5dp"
            android:text="Thu 22nd April 2015 19:00"
            android:textAppearance="?android:attr/textAppearanceMedium" />



        <!-- Course Stats Label -->
        <LinearLayout
            android:id="@+id/courseInfoLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/event_date"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/courseLabelLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lab_course"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:background="@color/sdw_subtitle_background"
                    android:textColor="@color/sdw_subtitle_foreground"
                    android:padding="3dp"
                    android:text="COURSE" />

                <TextView
                    android:id="@+id/lab_distance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="@color/sdw_subtitle_background"
                    android:textColor="@color/sdw_subtitle_foreground"
                    android:padding="3dp"
                    android:text="DISTANCE" />

                <TextView
                    android:id="@+id/lab_ascent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="@color/sdw_subtitle_background"
                    android:textColor="@color/sdw_subtitle_foreground"
                    android:padding="3dp"
                    android:text="ASCENT" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/courseinfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/course"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:padding="3dp"
                    android:text="GS898" />

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:padding="3dp"
                    android:text="11.45m/17.67km" />

                <TextView
                    android:id="@+id/ascent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:padding="3dp"
                    android:text="1067ft/318m" />
            </LinearLayout>
        </LinearLayout>

        <!-- Course Description -->
        <LinearLayout
            android:id="@+id/courseDescriptionLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/courseInfoLayout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lab_course_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:background="@color/sdw_subtitle_background"
                android:textColor="@color/sdw_subtitle_foreground"
                android:padding="3dp"
                android:text="DESCRIPTION"
               />


            <TextView
                android:id="@+id/course_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="...."
                />
        </LinearLayout>


        <!-- Course Description -->
        <LinearLayout
            android:id="@+id/coursEntrantsInfoLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/courseDescriptionLayout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lab_course_entrants_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:background="@color/sdw_subtitle_background"
                android:textColor="@color/sdw_subtitle_foreground"
                android:padding="3dp"
                android:text="EVENT ENTRIES"
                 />


            <TextView
                android:id="@+id/course_entrants_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="@string/no_tt_entries"
                 />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
