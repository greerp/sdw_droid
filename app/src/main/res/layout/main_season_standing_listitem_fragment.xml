<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:src="@drawable/tt" />

        <LinearLayout
            android:id="@+id/stdDetailTop"
            android:layout_toRightOf="@id/icon"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/stdName"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:text="Paul Greer"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:singleLine="true"
                android:textSize="18sp"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/stdScratchPts"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="24"
                android:textSize="18sp"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:id="@+id/stdHandicapPts"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="19"
                android:textSize="18sp"
                android:layout_alignParentTop="true"
                 />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/stdDetailBottom"
        android:layout_toRightOf="@id/icon"
        android:layout_below="@id/stdDetailTop"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stdEntered"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:text="Ent: 17"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textSize="12sp"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/stdFinished"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Fin: 13"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:id="@+id/stdDns"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Dns: 1"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:id="@+id/stdDnf"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Dnf: 0"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            />

    </LinearLayout>






</RelativeLayout>